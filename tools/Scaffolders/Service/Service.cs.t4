        public <#= modelName #>Service()
            : this(new Repository<<#= modelName#>>(new DbContextRegistry()))
        {
        }

        <# } #>
public <#= modelName #>Service(IRepository<<#= modelName #>> repository) 
            : base(repository)
        {
        }
    }
}