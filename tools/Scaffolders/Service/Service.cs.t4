using <#= Model.ModelTypeNamespace #>;
<# } #>

namespace <#= Model.Namespace #>
{
  <#
    var modelType = (CodeType)Model.ModelType;
    var modelName = modelType.Name;
  #>
  public class <#= modelName #>Service : CrudService<<#= modelName #>>, I<#= modelName #>Service
    {
        <# if(Model.NoIoc) { #>
